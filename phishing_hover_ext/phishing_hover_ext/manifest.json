{
    "manifest_version": 3,
    "name": "Smart Phishing Detector with ML",
    "version": "1.0",
    "description": "Detects phishing links using a trained ML model and warns users on hover, click, and in popup dashboard.",
    "permissions": [
      "notifications",
      "storage",
      "activeTab"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon48.png"
    },
    "web_accessible_resources": [
      {
        "resources": ["icon48.png"],
        "matches": ["<all_urls>"]
      }
    ],
    "icons": {
      "48": "icon48.png"
    }
  }
  